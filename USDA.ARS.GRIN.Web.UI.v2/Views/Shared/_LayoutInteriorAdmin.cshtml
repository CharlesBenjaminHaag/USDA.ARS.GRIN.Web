    /* Datatables */
    function InitDataTable(tableName) {
        $(document).ready(function () {
            var table = $("#" + tableName).DataTable({
                dom: 'Blfrtip',
                paging: true,
                initComplete: function () {
                    SetControlVisibility(tableName);
                },
                responsive: true,
                buttons: [
                    'selectAll',
                    'selectNone',
                    'csv',
                    'excel',
                    'pdf'
                ],
                select: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                columnDefs: [
                    { targets: [0], visible: false }
                ]
            });
        });
    }

</script>