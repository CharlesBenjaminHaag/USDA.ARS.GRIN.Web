@model USDA.ARS.GRIN.Web.ViewModelLayer.PVPApplicationViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutUSWDSInterior.cshtml";
}

<style>
    #overlay {
        height: 100%;
        width: 100%;
        position: fixed; /* NOTE: Had originally been "absolute;" overlay did not conceal entire page and allowed scrolling behind it. */
        top: 0px;
        left: 0px;
        z-index: 99999;
        background-color: #1b1b1b;
        color: white;
        filter: alpha(opacity=75);
        -moz-opacity: 0.75;
        opacity: 0.75;
        display: none;
        overflow: scroll;
    }

    #overlay h2 {
        position: fixed;
        margin-left: 40%;
        top: 40%;
    }

    .usa-breadcrumb {
        padding-bottom: 1rem;
        padding-top: 0rem; 
    }
    #section-pvp-search-criteria .usa-accordion__button {
        -moz-osx-font-smoothing: inherit;
        -webkit-font-smoothing: inherit;
        border: 0;
        border-radius: 0;
        box-shadow: none;
        padding: 0;
        text-align: left;
        background-image: url(https://designsystem.digital.gov/assets/img/icons/remove.svg),linear-gradient(transparent,transparent);
        background-repeat: no-repeat;
        background-color: #f0f0f0;
        background-position: right 1.25rem center;
        background-size: 1.5rem;
        color: #1b1b1b;
        cursor: pointer;
        display: inline-block;
        font-weight: 700;
        margin: 0;
        padding: 1rem 3.5rem 1rem 1.25rem;
        text-decoration: none;
        width: 100%;
        background-image: url(https://designsystem.digital.gov/assets/img/icons/remove-white.svg),linear-gradient(transparent,transparent);
        background-repeat: no-repeat;
        background-color: #0050d8;
        color: #fff;
    }

        #section-pvp-search-criteria .usa-accordion__button:hover {
            background-color: #0050d8;
            color: white;
            border-color: #0050d8;
        }
    .usa-alert--info .usa-alert__body::before {
        background: url(/assets/img/usa-icons/info.svg) no-repeat center/contain;
        height: 2rem;
        width: 2rem;
        content: "";
        display: block;
        height: 4;
        left: .5rem;
        position: absolute;
        top: .75rem;
</style>

<div id="overlay"><h2>Loading .. Please wait</h2></div>
<div class="usa-section">
    <div class="grid-container" style="max-width:94rem;">
        <div class="grid-row grid-gap">
            <div class="usa-layout-docs__sidenav desktop:grid-col-2" style="background-color: #f0f0f0; ">
                <nav aria-label="Secondary navigation">
                    <h4>Search Criteria</h4>
                    @using (Html.BeginForm("Search", "PVP", FormMethod.Post, new { id = "frmMain" }))
                    {
                <div id="section-search-criteria" class="margin-top-3">
                    <label class="usa-label" for="SearchEntity_StatusDateRange">Status</label>
                    @Html.DropDownListFor(x => x.SearchEntity.StatusDateRange, Model.StatusDateRanges, new { @class = "usa-select" })
                    <label class="usa-label" for="SearchEntity_CertificateStatus">Status</label>
                    @Html.DropDownListFor(x => x.SearchEntity.CertificateStatus, Model.CertificateStatuses, "All Statuses", new { @class = "usa-select" })
                    <label class="usa-label" for="SearchEntity_Variety">Variety</label>
                    @Html.TextBoxFor(x => x.SearchEntity.Variety, new { @class = "usa-input" })
                    @*<label class="usa-label">Crop Common Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.CommonName, new { @class = "usa-input" })*@
                    <label class="usa-label">Applicant</label>
                    @Html.TextBoxFor(x => x.SearchEntity.Applicant, new { @class = "usa-input" })
                    <label class="usa-label">Scientific Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ScientificName, new { @class = "usa-input" })
                    <label class="usa-label">Experimental Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ExperimentalName, new { @class = "usa-input" })
                </div>
                        <ul class="usa-button-group margin-top-2 margin-bottom-2">
                            <li class="usa-button-group__item">
                                <button id="btnReset" type="button" class="usa-button usa-button--outline">Reset</button>
                            </li>
                            <li class="usa-button-group__item">
                                <button id="btnSearch" type="submit" class="usa-button">Search</button>
                            </li>
                        </ul>
                    }
                </nav>
            </div>
            <main class="usa-layout-docs__main desktop:grid-col-10 usa-prose usa-layout-docs" id="main-content">
                <h2 id="section-heading-h2">Advanced Search</h2>
                <a href="@Url.Action("Index","PVP")">Return to PVP Page</a>
                <div class="usa-alert usa-alert--info">
                    <div class="usa-alert__body">
                        <p class="usa-alert__text">
                            All data represented here is based on an <a class="usa-link" href="https://www.ams.usda.gov/services/plant-variety-protection/application-status">update</a> from <strong>1/9/2023</strong>. Please <a href="@Url.Action("Index","Contact", new { context="pvp" })">contact us</a> regarding any errors or omissions.
                        </p>
                    </div>
                </div>
                <h3 id="section-heading-h3">Search Results (@Model.RowsAffected)</h3>
                <table id="data-table_pvp_applications" class="display table-responsive">
                    <thead>
                        <tr>
                            <th>PV Number</th>
                            <th>Applicant</th>
                            <th>Variety (Cultivar)</th>
                            <th>Common Name</th>
                            <th>Experimental Name</th>
                            <th>Expiration Date</th>
                            <th>Status</th>
                            <th></th>
                            <th>Accession</th>
                            @*<th></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.DataCollection)
                        {
                            <tr>
                                <td>@result.ApplicationNumber</td>
                                <td>@result.Applicant</td>
                                <td>@result.VarietyName</td>
                                <td>@result.CommonName</td>
                                <td>@result.ScientificName</td>
                                <td>
                                    @if (result.ExpirationDate > DateTime.MinValue)
                                    {
                                        @result.ExpirationDate.ToShortDateString()
                                    }
                                </td>
                                <td>
                                    @if (!String.IsNullOrEmpty(result.CertificateURL))
                                    {
                                        <a href="@result.CertificateURL">
                                            @result.CertificateStatus
                                        </a>
                                    }
                                    else
                                    {
                                        @result.CertificateStatus
                                    }
                                </td>
                                <td>
                                    @if (!String.IsNullOrEmpty(result.CertificateURL))
                                    {
                                        <a href="@result.CertificateURL">
                                            <img src="~/assets/img/PDF_32.png" />
                                        </a>
                                    }
                                </td>
                                <td>
                                    <a class="usa-link usa-link--alt usa-link--external" href="https://npgsweb.ars-grin.gov/gringlobal/accessiondetail?id=@result.AccessionID">

                                        @result.AccessionName
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="grid-container margin-top-5" style="max-width:94rem;">
                    <div class="grid-row grid-gap">
                        <div class="grid-col-12">
                            <div id="section-pvp-applications">

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        </div>
    </div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data-table_pvp_applications");
    });

    /* DETAIL */
    $(function () {
        $('.detail-expand').on('click', function () {
            var id = this.id;
            $("#modal-pvp-detail").modal("show");
        });
    });

    /* ========================================================================================
 * Search logic
  ======================================================================================== */
    $(document).on("click", "[id='btnReset']", function () {
        Reset();
    });

    /* If the user resets the search, 1) Remove all search criteria, and 2) Clear the search-results
     * Datatable.*/
    function Reset() {
        $(this).closest('form').find("input[type=text], textarea").val("");
        $("#section-search-criteria select").val("");
        $("#section-search-criteria input[type=text]").val("");
        $("#ItemIDList").val("");
        $("#EventValue").val("");

        // Set date-range to default, rather than clearing it entirely.
        // 01Y
        $("#SearchEntity_StatusDateRange").val("01Y");

        // Operates on all tables on the page.
        $.fn.dataTable
            .tables({ visible: true, api: true })
            .clear()
            .draw();
    }
</script>
