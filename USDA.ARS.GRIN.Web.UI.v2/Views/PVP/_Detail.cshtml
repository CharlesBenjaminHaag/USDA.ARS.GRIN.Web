@model USDA.ARS.GRIN.Web.ViewModelLayer.PVPApplicationViewModelBase

    @using (Html.BeginForm("Search", "PVP", FormMethod.Post, new { id = "frmMain" }))
    {
        <div id="section-search-criteria" class="grid-container" style="max-width:94rem;">
            <div class="grid-row grid-gap">
                <div class="mobile-lg:grid-col-2">
                    <label>Time Frame</label>
                    @Html.DropDownListFor(x => x.SearchEntity.StatusDateRange, Model.StatusDateRanges, new { @class = "usa-select" })
                </div>
                <div class="mobile-lg:grid-col-2">
                    <label>Status</label>
                    @Html.DropDownListFor(x => x.SearchEntity.CertificateStatus, Model.CertificateStatuses, "All Statuses", new { @class = "usa-select" })
                </div>
                <div class="mobile-lg:grid-col-4">
                    <label>Variety</label>
                    @Html.TextBoxFor(x => x.SearchEntity.Variety, new { @class = "usa-input" })
                </div>
                <div class="mobile-lg:grid-col-4">
                    <label>Crop Common Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.CommonName, new { @class = "usa-input" })
                </div>
            </div>
            <br />
            <div class="grid-row grid-gap">
                <div class="mobile-lg:grid-col-4">
                    <label>Scientific Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ScientificName, new { @class = "usa-input" })
                </div>
                <div class="mobile-lg:grid-col-4">
                    <label>Experimental Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ExperimentalName, new { @class = "usa-input" })
                </div>
                <div class="mobile-lg:grid-col-4">
                    <label>Applicant</label>
                    @Html.TextBoxFor(x => x.SearchEntity.Applicant, new { @class = "usa-input" })
                </div>
            </div>
            <div class="grid-row grid-gap">
                <div class="mobile-lg:grid-col-12">
                    <div class="grid-col-12 margin-top-3 margin-bottom-3">
                        <button id="btnSearch" type="submit" class="usa-button float-right">Search</button>
                        <button id="btnReset" type="button" class="usa-button usa-button--secondary float-right">Reset</button>
                    </div>
                </div>
            </div>

        </div>
    }
